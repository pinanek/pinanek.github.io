---
import Heading2 from './headings/heading-2.astro'
import Heading3 from './headings/heading-3.astro'
import Heading4 from './headings/heading-4.astro'
import Image from './image.astro'
import CodeBlock from './code/code-block.astro'

import type { Post } from '@/types/post'

export interface Props {
  MdxContent: Post['default']
}

const { MdxContent } = Astro.props as Props
---

<article>
  <MdxContent
    components={{
      h2: Heading2,
      h3: Heading3,
      h4: Heading4,
      img: Image,
      pre: CodeBlock
    }}
  />
</article>

<style lang="scss">
  @use 'src/styles/tokens' as *;

  article :global(p) {
    margin: 1em 0;
    line-height: calc(1em + 0.75rem);
    transition: color $duration-default $ease-in-out;
  }
</style>
