---
import { Figure } from "@/components/common";

interface Props {
  data: {
    src: string;
    width: number;
    height: number;
  };

  alt: string;
  caption?: string;
}

const {
  data: { src, width, height },
  alt,
  caption,
} = Astro.props as Props;
---

<Figure src={src} alt={alt} width={width} height={height} caption={caption} />
