---
import PostLayout from '@/layouts/post-layout.astro'
import type { GetStaticPaths } from 'astro'
import type { Post } from '@/types/post'

export const getStaticPaths: GetStaticPaths = async () => {
  const posts = await Astro.glob<Post>('/content/posts/{*,**/index}.mdx')

  const data = posts.map(async ({ default: Content, frontmatter, file }) => {
    const slug = file
      .replace(/\/index.mdx$/, '')
      .split(/[/\\]/)
      .pop()

    return {
      params: { slug },
      props: {
        Content,
        frontmatter
      }
    }
  })

  return Promise.all(data)
}

interface Props {
  Content: Post['default']
  frontmatter: Post['frontmatter']
}

const { Content, frontmatter } = Astro.props as Props
---

<PostLayout
  head={{
    title: frontmatter.title,
    seoTitle: frontmatter.seoTitle,
    description: frontmatter.description,
    imageSrc: frontmatter.image.url,
    imageAlt: frontmatter.image.alt
  }}
>
  <Content />
</PostLayout>
