---
import Heading2 from './headings/heading-2.astro'
import Heading3 from './headings/heading-3.astro'
import Heading4 from './headings/heading-4.astro'
import Paragraph from './paragraph.astro'
import Link from './link.astro'
import Blockquote from './blockquote.astro'
import Picture from './picture.astro'
import CodeBlock from './code/code-block.astro'
import InlineCode from './code/inline-code.astro'
import InfoBar from './info-bar/info-bar.astro'
import ListItem from './list/list-item.astro'
import OrderedList from './list/ordered-list.astro'
import UnorderedList from './list/unordered-list.astro'

import type { PostData } from '@/types/post'

interface Props {
  Content: PostData['Content']
}

const { Content } = Astro.props as Props

const customComponents = {
  h2: Heading2,
  h3: Heading3,
  h4: Heading4,
  p: Paragraph,
  a: Link,
  blockquote: Blockquote,
  img: Picture,
  pre: CodeBlock,
  inlinecode: InlineCode,
  infobar: InfoBar,
  li: ListItem,
  ol: OrderedList,
  ul: UnorderedList
}
---

<Content components={customComponents} />
